<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- Horizontal Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#14274f"
        app:layout_constraintGuide_percent="0.10"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"
        />
    <!-- Vertical Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv25pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv50pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv75pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        />

    <!-- Search Bar -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#14274F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/glh10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbar"
        android:text="Search for clothes..."
        android:textSize="14sp"
        android:padding="16dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchIcon"/>
    <!-- Search Icon -->
    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_search"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/glh10"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Product Item -->
    <ImageView
        android:id="@+id/imageProductItem"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/image_product1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/glh10"
        app:layout_constraintBottom_toTopOf="@id/glh50"
        />
    <TextView
        android:id="@+id/twProductItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name:\nDescription:\nCategory:\nBrand:\nSize/Dimensions:\nShipping Information:\nPrice:\nRating:"
        android:textSize="16sp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/imageProductItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/glv50pc"/>
    <!-- Color Selection -->
    <!-- Color Selection Text -->
    <TextView
        android:id="@+id/twChoseColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Color:"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/glh70"
        app:layout_constraintBottom_toTopOf="@id/glh80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/colorSpinner"/>

    <!-- Color Selection Spinner -->
    <Spinner
        android:id="@+id/colorSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/glh70"
        app:layout_constraintBottom_toTopOf="@id/glh80"
        app:layout_constraintStart_toEndOf="@+id/twChoseColor"
        app:layout_constraintEnd_toEndOf="@id/glv50pc"/>
    <!-- Quantity Selection -->
    <TextView
        android:id="@+id/twQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/glh70"
        app:layout_constraintBottom_toTopOf="@id/glh80"
        app:layout_constraintStart_toEndOf="@id/glv50pc"
        app:layout_constraintEnd_toStartOf="@id/etQuantity"/>
    <EditText
        android:id="@+id/etQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:padding="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/glh70"
        app:layout_constraintBottom_toTopOf="@id/glh80"
        app:layout_constraintStart_toEndOf="@id/twQuantity"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Button Add to Cart -->
    <Button
        android:id="@+id/buttonAddToCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/glh80"
        app:layout_constraintBottom_toTopOf="@+id/glh90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Bottom Navigation Bar -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#14274F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glh90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/nav_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glh90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/glv25pc"/>

    <ImageView
        android:id="@+id/nav_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glh90"
        app:layout_constraintStart_toEndOf="@id/glv25pc"
        app:layout_constraintEnd_toStartOf="@id/glv50pc"/>

    <ImageView
        android:id="@+id/nav_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glh90"
        app:layout_constraintStart_toEndOf="@id/glv50pc"
        app:layout_constraintEnd_toStartOf="@id/glv75pc"/>

    <ImageView
        android:id="@+id/nav_logo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glh90"
        app:layout_constraintStart_toEndOf="@id/glv75pc"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>