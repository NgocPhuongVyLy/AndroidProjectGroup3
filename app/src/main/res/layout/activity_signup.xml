<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Username"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        app:layout_constraintTop_toBottomOf="@id/registerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:drawableLeft="@drawable/baseline_email_24"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:drawableLeft="@drawable/baseline_password_24"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/signupbt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Sign Up"
        android:backgroundTint="#14274f"
        android:textColor="@android:color/white"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/google"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Sign Up with Google"
        android:drawableLeft="@drawable/file"
        android:backgroundTint="#14274f"
        android:textColor="@android:color/white"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/signupbt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/microsoft"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Sign Up with Mircosoft"
        android:drawableLeft="@drawable/img_1"
        android:backgroundTint="#14274f"
        android:layout_margin="30dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/gmail"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Sign Up with gmail"
        android:drawableLeft="@drawable/img_3"
        android:backgroundTint="#14274f"
        android:layout_margin="30dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/microsoft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
