<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/white">

        <!-- Cart Title -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start"
            >

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/bckbtn"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_gravity="start"
                android:contentDescription="Back Item"/>

            <TextView
                android:id="@+id/cartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#14274f"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>

        <!-- ScrollView for Cart Items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Cart Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="#14274f"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/productImage1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/img1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Name 1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/productPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$68.99"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/editsize1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Size"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:autoLink="none"
                            android:padding="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qtycontrol1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="end">

                        <ImageButton
                            android:id="@+id/btnDelete"
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"
                            android:contentDescription="Delete Item"/>

                        <TextView
                            android:id="@+id/productQuantity1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:onClick="addItem"
                            android:clickable="true"
                            />

                        <TextView
                            android:id="@+id/Add1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:padding="10dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Cart Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="#14274f"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/productImage2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/img2"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Name 2"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/productPrice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$79.99"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/editsize2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Size"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:autoLink="none"
                            android:padding="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qtycontrol2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="end">

                        <ImageButton
                            android:id="@+id/btnDelete2"
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"
                            android:contentDescription="Delete Item"/>

                        <TextView
                            android:id="@+id/productQuantity2"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/Add2"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:onClick="addItem"
                            android:clickable="true"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Cart Item 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="#14274f"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/productImage3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/img3"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Name 3"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/productPrice3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$89.99"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/editsize3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Size"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:autoLink="none"
                            android:padding="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qtycontrol3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/btnmin3"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/productQuantity3"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/Add3"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:onClick="addItem"
                            android:clickable="true"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Total Amount Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#ffffff"
            android:elevation="5dp">

            <TextView
                android:id="@+id/totalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$209.89"
                android:textSize="22sp"
                android:padding="9px"
                android:textColor="#FF5722"
                android:layout_margin="30sp"
                android:layout_gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnaddItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Items"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:backgroundTint="#404040"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:backgroundTint="#14274f"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
